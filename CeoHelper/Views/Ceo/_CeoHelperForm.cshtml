@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer;

<div id="ceoHelperModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="content-generator-form">
                    <form id="ceoHelperForm">
                        <div class="form-group">
                            <label class="modal-form-control-label" for="language">@_localizer["ChooseLanguage"]</label>
                            <select class="form-control" id="language" name="language">
                                <option value="en-US">@_localizer["English"]</option>
                                <option value="ru-RU">@_localizer["Russian"]</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="modal-form-control-label" for="textSize">@_localizer["TextSize"]</label>
                            <input class="form-control" type="text" id="textSize" name="textSize" oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/(\..*?)\..*/g, '$1').replace(/^0[^.]/, '0');" />
                            <span class="text-danger modal-form-textSize-error"></span>
                        </div>
                        <div class="form-group">
                            <label class="modal-form-control-label" for="keywords">@_localizer["Keywords"]</label>
                            <textarea class="form-control  keywords" id="keywords" name="keywords" placeholder="@_localizer["PutTeachKeyword"]"></textarea>
                            <span class="text-danger modal-form-keywords-error"></span>
                        </div>
                        <div class="form-group">
                            <label class="modal-form-control-label" for="keywordDensity">@_localizer["KeywordDensity"]</label>
                            <input class="form-control" type="text" id="keywordDensity" name="keywordDensity" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1').replace(/^0[^.]/, '0');" />
                            <span class="text-danger modal-form-keywordsDensity-error"></span>
                        </div>
                        <div class="form-group">
                            <label class="modal-form-control-label" for="personalization">@_localizer["Personalization"]</label>
                            <textarea class="form-control personalization" id="personalization" name="personalization" placeholder="@_localizer["TechnicalDetails"]"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" id="submitEnteredParamsFromModal" class="rd-btn">@_localizer["Generate"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
